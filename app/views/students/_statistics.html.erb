<div class="container mt-4">
  <% if @stats.present? %>
    <% @stats.each do |subject, classification| %>
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="card-title text-center"><%= subject.to_s.capitalize %> - Score Distribution</h4>
      </div>
      
      <div class="card-body">
        </div>
          <%= column_chart classification, 
                width: "100%", 
                height: "400px", 
                xtitle: "Score Ranges", 
                ytitle: "Number of Students", 
                labels: true %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="alert alert-warning">No statistics available.</p>
  <% end %>
</div>
